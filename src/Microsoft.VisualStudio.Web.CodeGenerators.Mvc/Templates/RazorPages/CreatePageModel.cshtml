@inherits Microsoft.VisualStudio.Web.CodeGeneration.Templating.RazorTemplateBase
@using Microsoft.VisualStudio.Web.CodeGeneration.EntityFrameworkCore
@using System.Collections.Generic
@using System.Linq

using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;
using Microsoft.AspNetCore.Mvc;
using Microsoft.AspNetCore.Mvc.RazorPages;
using Microsoft.EntityFrameworkCore;
@{
    foreach (var namespaceName in Model.RequiredNamespaces)
    {
@:using @namespaceName;
    }
}
namespace @Model.PageModelNamespace
{
    public class @(Model.ViewName)Model : PageModel
    {
        private readonly @Model.ContextTypeName _context;

        public @(Model.ViewName)Model(@Model.ContextTypeName context)
        {
            _context = context;
        }

        [BindProperty]
        public @Model.ViewDataTypeName @Model.ViewDataTypeShortName { get; set; }

        public async Task<IActionResult> OnPostAsync()
        {
            if (ModelState.IsValid)
            {
                _context.Add(@Model.ViewDataTypeShortName);
                await _context.SaveChangesAsync();
                return RedirectToPage();
            }

            return Page();
        }
    }
}